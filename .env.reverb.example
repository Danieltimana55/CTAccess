# Driver de broadcasting (usar reverb)
BROADCAST_DRIVER=reverb
BROADCAST_CONNECTION=reverb

# Credenciales de Reverb (generadas autom√°ticamente)
REVERB_APP_ID=local
REVERB_APP_KEY=testkey
REVERB_APP_SECRET=testsecret

# Host y puerto donde corre el servidor Reverb
REVERB_HOST=127.0.0.1
REVERB_PORT=8080
REVERB_SCHEME=http

# Variables para Vite (Frontend)
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

